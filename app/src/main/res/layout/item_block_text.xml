<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/rowMeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="v1 • user • 1m"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未鎖定"
        android:textSize="12sp"
        android:layout_marginTop="4dp"/>

    <!-- 只讀顯示 -->
    <TextView
        android:id="@+id/tvViewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="content"
        android:textSize="16sp"
        android:layout_marginTop="6dp"/>

    <!-- 可編輯 -->
    <EditText
        android:id="@+id/etEdit"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="top|start"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:textSize="16sp"
        android:hint="輸入內容…"/>

    <!-- 按鈕列：左刪除、右編輯群 -->
    <LinearLayout
        android:id="@+id/rowActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- 左側：刪除 -->
        <LinearLayout
            android:id="@+id/leftActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <!-- 佔位把右側推到尾端 -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 右側：編輯 / 新增 / 釋放 / 儲存 / 取消 -->
        <LinearLayout
            android:id="@+id/rightActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="edit"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <!-- 加號（你已改為新增 block 用） -->
            <ImageButton
                android:id="@+id/btnAcquire"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="add block"
                android:src="@android:drawable/ic_input_add"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <ImageButton
                android:id="@+id/btnRelease"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="release"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:visibility="gone"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <ImageButton
                android:id="@+id/btnSave"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="save"
                android:src="@android:drawable/ic_menu_save"
                android:visibility="gone"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <ImageButton
                android:id="@+id/btnCancel"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="cancel"
                android:src="@android:drawable/ic_menu_revert"
                android:visibility="gone"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
